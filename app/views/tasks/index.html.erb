
<!DOCTYPE html>
<html>
  <head>
    <title>My Tasks</title>
  </head>

  <body>
  <div class="container">
    <h1>My Tasks</h1>
        <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.title, task_path(task) %>
            | <%= link_to "X", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            | <%= link_to "Edit", edit_task_path(task), class: "btn btn-primary" %>
            </li>
        <% end %>
        </ul>
    <%= link_to "Create a new task", new_task_path, class: 'btn btn-primary' %>
    </body>
  </div>
</html>
